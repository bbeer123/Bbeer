<% provide(:title, "Profile") %>


    <h1>Profile info</h1>

    <% if user_signed_in? %>
      Name: <%= current_user.name %><br/>
      Last Name: <%= current_user.lastname %><br/>
      Birthday: <%=current_user.birthday %><br/>
      Address: <%= current_user.address %><br/>
      City: <%= current_user.city %><br/>
      E-mail <%= current_user.email %> <br/>
      Last Sign In <%= current_user.last_sign_in_at %><br/>
      You have your account since <%= current_user.created_at %><br/>
    <% end %>
 
    <%#= Link to edit profile %><br/>
    <%= link_to "Edit Details", edit_user_registration_path %>


    </br>
    </br>
    
    <%#= Here is where you add the user's orders %>
    <h1>My Orders</h1>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>User Id</th>
      <th>Status</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  


  <tbody>
    
    <% @orders.each do |order| %>
      <tr>
        <% if order.status == "Paid" %>
        <td><%= order.id %></td>
        <td><%= order.order_date.strftime("%F %T") %></td>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= order.updated_at.strftime("%F %T") %></td>
        
      
      
        
      <% end %>
     
      </tr>
    <% end %>
  </tbody>
</table>
