

<div id="itemsContainer">

<div class= "searchContainer"> <% provide(:title, "Home") %>
<p>Thirsty?</p> 
<p>We might help you to find what you are looking for!<%= render '/layouts/search' %></p>
</div>

     <div class="delivery">
     <img src="../assets/Site/delivery3.jpg"  alt="Delivery icon" />
     </div>
  
      <% @items.each do |item| %>
      <div class="itemhols">
       <h1><%= item.title %></h1>
       
       <%= link_to (image_tag item.image_url, :class => "itemholsIm"), item %>
        <p><%= item.description %></p>
       <p>Price <%= number_to_currency(item.price, :unit => "â‚¬") %>
       <br>
        Category: <%= item.category %>
        <br>
        Brand: <%= item.brand %></p>
       
       <p>
        <a href="/cart/<%= item.id %>" class= "button"> Add to Cart</a>
         <%= link_to 'Show',  item, :class => "button", :role => "button" %>
         
      <%if current_user.try(:admin?) %>
         <%= link_to 'Edit',  edit_item_path(item), :class => "button", :role => "button" %>
         <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
       <% end %>
       
       </p>
        
      </div>
    <% end %>
      
</div>